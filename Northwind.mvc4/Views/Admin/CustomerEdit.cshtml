@model ASPNET.Models.CustomerEditViewModel
@{
    ViewBag.Title = "Edit Customer";
}


<div class="row">
    <div class='col-sm-12'>
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/admin">Administration</a></li>
            <li><a href="/admin/customers">Customers</a></li>
            <li class="active">Edit Customer</li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="well">
            <!-- Blank Forms Post Back to themselves-->
            @using (Html.BeginForm("CustomerEdit", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class='alert alert-success' role='alert'>
                        <span class='glyphicon glyphicon-ok' aria-hidden='true'></span>
                        <span class='sr-only'>Success: </span>
                        @ViewBag.Message
                    </div>
                }

                if (IsPost)
                {
                    if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class='alert alert-danger' role='alert'>
                            <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                            <span class='sr-only'>Error:</span>
                            @Html.ValidationSummary("")
                        </div>
                    }
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerID, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.CustomerID, new
                   {
                       @class = "form-control",
                       autocomplete = "off",
                       placeholder = "XXXX",
                       style = "text-transform:uppercase",
                       maxlength = "4"
                   })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", autocomplete = "off", placeholder = "ABC Company" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ContactName, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", placeholder = "John Doe" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ContactTitle, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.ContactTitle, new { @class = "form-control", placeholder = "Manager" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "123 Street Ave." })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "New Bacon" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Region, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Region, new { @class = "form-control", placeholder = "ON" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "N1N 1N1" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Country, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.SelectedCountryID, Model.Countries, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "(999)999-9999" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Fax, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", placeholder = "(999)999-9999" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Update Customer" />
                        @Html.ActionLink("Cancel", "Customers", "Admin", new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-4">
        <div class="well">
            At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis
            praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias
            excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui
            officia deserunt mollitia animi.
        </div>
    </div>

</div>


@section Scripts
{
    @Scripts.Render("~/bundles/maskedinput")

    <style type="text/css">
    </style>
    <script type="text/javascript">


        jQuery(function ($) {
            $(".number").on('keydown', numbersOnly);
            $(".currenciesOnly").on('keydown', currenciesOnly);
        });
    </script>
}

