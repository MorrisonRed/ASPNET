@model ASPNET.Models.CategoryAddViewModel
@{
    ViewBag.Title = "Add Category";
}


<div class="row">
    <div class='col-sm-12'>
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/admin">Administration</a></li>
            <li><a href="/admin/categories">Categories</a></li>
            <li class="active">Add Category</li>
        </ul>
    </div>
</div>

<!-- Blank Forms Post Back to themselves-->
@using (Html.BeginForm("CategoryAdd", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-8">
        <div class="well">
                @if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class='alert alert-success' role='alert'>
                        <span class='glyphicon glyphicon-ok' aria-hidden='true'></span>
                        <span class='sr-only'>Success: </span>
                        @ViewBag.Message
                    </div>
                }
                @if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class='alert alert-danger' role='alert'>
                        <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                        <span class='sr-only'>Error:</span>
                        @Html.ValidationSummary("")
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryName, new { @class = "text-left col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "text-left col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", cols = "20", rows = "10" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Picture, new { @class = "text-left col-md-3 control-lable" })
                    <div class="col-md-8">
                        <input type="file" class="form-control" id="NewPicture" name="NewPicture" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Save" />
                        @Html.ActionLink("Cancel", "Categories", "Admin", new { @class = "btn btn-default" })
                    </div>
                </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="well">
            At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis
            praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias
            excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui
            officia deserunt mollitia animi.
        </div>
    </div>
</div>
}      

