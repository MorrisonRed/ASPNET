@model ASPNET.Models.ProductDeleteViewModel
@{
    ViewBag.Title = "Delete Product";
}


<div class="row">
    <div class='col-sm-12'>
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/admin">Administration</a></li>
            <li><a href="/admin/products">Products</a></li>
            <li class="active">Delete Product</li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="well">
            <!-- Blank Forms Post Back to themselves-->
            @using (Html.BeginForm("ProductDelete", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class='alert alert-success' role='alert'>
                        <span class='glyphicon glyphicon-ok' aria-hidden='true'></span>
                        <span class='sr-only'>Success: </span>
                        @ViewBag.Message
                    </div>
                }
                if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class='alert alert-danger' role='alert'>
                        <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                        <span class='sr-only'>Error:</span>
                        @Html.ValidationSummary("")
                    </div>
                }

                @Html.HiddenFor(m => m.ProductID)
                <div class="form-group">
                    @Html.LabelFor(m => m.ProductName, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <label class="form-control">@Html.DisplayFor(m => m.ProductName)</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Category</label>
                    <div class="col-md-8">
                        <label class="form-control">@Html.DisplayFor(m => m.Category)</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Supplier</label>
                    <div class="col-md-8">
                        <label class="form-control">@Html.DisplayFor(m => m.Supplier)</label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.QuantityPerUnit, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <label class="form-control">@Html.DisplayFor(m => m.QuantityPerUnit)</label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UnitPrice, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            @{var formated = String.Format("{0:0.00}", Model.UnitPrice);}
                            <label class="form-control">@Html.DisplayFor(m => m.UnitPrice, formated)</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitsInStock, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">#</span>
                            <label class="form-control">@Html.DisplayFor(m => m.UnitsInStock)</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitsOnOrder, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">#</span>
                            <label class="form-control">@Html.DisplayFor(m => m.UnitsOnOrder)</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ReorderLevel, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">#</span>
                            <label class="form-control">@Html.DisplayFor(m => m.ReorderLevel)</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Discontinued, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(m => m.Discontinued, new { @class = "form-control", @disabled = true })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Delete Category" />
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-4">
        <div class="well">
            At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis
            praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias
            excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui
            officia deserunt mollitia animi.
        </div>
    </div>

</div>

@section Scripts
{
    <style type="text/css">
    </style>
    <script type="text/javascript">
        jQuery(function ($) {

        });
    </script>
}

