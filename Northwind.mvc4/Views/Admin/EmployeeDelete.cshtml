@model ASPNET.Models.EmployeeDeleteViewModel
@{
    ViewBag.Title = "Delete Employee";
}


<div class="row">
    <div class='col-sm-12'>
        <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/admin">Administration</a></li>
            <li><a href="/admin/employees">Employees</a></li>
            <li class="active">Delete Employee</li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="well">
            <!-- Blank Forms Post Back to themselves-->
            @using (Html.BeginForm("EmployeeDelete", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class='alert alert-success' role='alert'>
                        <span class='glyphicon glyphicon-ok' aria-hidden='true'></span>
                        <span class='sr-only'>Success: </span>
                        @ViewBag.Message
                    </div>
                }

                if (IsPost)
                {
                    if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class='alert alert-danger' role='alert'>
                            <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                            <span class='sr-only'>Error:</span>
                            @Html.ValidationSummary("")
                        </div>
                    }
                }

                @Html.HiddenFor(m => m.EmployeeID)
                <fieldset>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.LastName)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.FirstName)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.Title)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.TitleOfCourtesy, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.TitleOfCourtesy)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ReportsTo, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.ReportsToName)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.BirthDate, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.BirthDate)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.HireDate, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.HireDate)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address, new { @class = "" })
                                <label class="form-control" style="width:95%;">@Html.DisplayFor(m => m.Address)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.City, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.City)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Region, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.Region)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.PostalCode, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.PostalCode)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Country, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.Country)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.HomePhone, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.HomePhone)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Extension, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.Extension)</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Salary, new { @class = "" })
                                <label class="form-control" style="width:90%;">@Html.DisplayFor(m => m.Salary)</label>
                            </div>
                        </div>
                        <div class="col-sm-6">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Notes, new { @class = "" })
                                <div class="form-control" style="height:auto;width:90%;">@Html.Raw(HttpUtility.HtmlDecode(Model.Notes))</div>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Delete Employee" />
                        @Html.ActionLink("Cancel", "Employees", "Admin", new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-4">
        <div class="well">
            <label class="text-left col-md-3 control-label">Photo</label>
            @if (Model.Photo != null)
            {
                <img id="Picture" name="Picture" src="data:image/png;base64,@Html.Encode(System.Convert.ToBase64String(Model.Photo))" width="100%" />
            }
        </div>
    </div>

</div>


@section Scripts
{
    @Scripts.Render("~/bundles/maskedinput")

    <style type="text/css">
    </style>
    <script type="text/javascript">
        jQuery(function ($) {

        });
    </script>
}

