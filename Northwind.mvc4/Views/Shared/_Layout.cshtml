@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link href='https://fonts.googleapis.com/css?family=Cinzel:400,700|Courgette' rel='stylesheet' type='text/css' />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="/Scripts/html5shiv.min.js"></script>
      <script src="/Scripts/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="navbar transparent navbar-inverse navbar-fixed-top hr">
        <div class="navbar-brand-right">

        </div>
        <div class="container">
            <div class="navbar-header">         
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="pull-right" style="padding-top:10px;color:white;">
                            Log off</a>
                        <a href="/manage" class="pull-right" style="padding-right:5px;padding-top:10px;color:white;">
                            Hello @User.Identity.GetUserName()!</a>

                        <a href="/admin/" name="contactUs" id="contactUS" class="btn-button-transparent pull-right">Manage</a>                      
                        // @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    }
                }
                else
                {
                    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { @id = "registerLink", @class = "btn-button-transparent pull-right" })
                    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @id = "loginLink", @class = "btn-button-transparent pull-right" })
                }

                @Html.ActionLink("Contact", "Contact", "Home", new { @class = "btn-button-transparent pull-right" })
            </div>
        </div>
    </div>

    <header>
        <div class="jumbotron">
            <div class="container">
                <h1>
                    <a href="/" style="text-decoration:none;color:inherit;" target="_parent">
                        <span style="font-family:Cinzel;">North</span>
                        <span style="font-family:Courgette;margin-left:-12px;">Wind</span>
                    </a>
                    Demo Store <sup>MVC 4</sup>
                </h1>
                <h3>@ViewBag.Title</h3>
            </div>
        </div>
    </header>

    <div id="content_wrapper">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <div id="footer" class="navbar-fixed-bottom row-fluid">
        <div class="navbar-inner">
            <div class="container">
                <hr />
                <p>
                    <small>
                        <label>Developed By:</label> <a href="http://morrisonred.com" target="_blank">MorrisonRed</a>
                    </small>
                </p>
                <p>
                    <small>
                        <label>Demo Images:</label> <a href="http://unsplash.com/" target="_blank">Unsplash</a>
                    </small>
                </p>
                <p>
                    <small>
                        <label>Design:</label> <a href="http://getbootstrap.com/" target="_blank">Bootstrap 3.3.6</a>
                    </small>
                </p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
